#posts
  - @posts.each do |post|
    %h2
      = link_to h(post.title), slug_url(post.created_at.year, post.created_at.month, post.created_at.day, post.slug)
    .author
      by
      = post.user.username
      = time_ago_in_words(post.created_at)
      ago
    .content
      = simple_format(post.body)
