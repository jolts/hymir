- if @posts.any?
  %ul#posts_list
    - @posts.each do |post|
      %li.post{:class => posts_list_classes(post)}
        .title
          %strong= link_to h(post.title), post_path(post)
          by #{post.user.username}
        .meta #{post.created_at.strftime('%B %d, %Y %H:%M')}
- else
  %p No posts found!
