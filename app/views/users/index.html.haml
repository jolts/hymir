- title 'Users'

- if can? :read, @users
  #users
    - @users.each do |user|
      .user
        %dl
          %dt
            Name
            - if can?(:destroy, user) && User.all.count > 1
              %span.destroy= link_to image_tag('user_delete.png'), user, :method => :delete, :confirm => 'Are you sure?', :rel => 'tipsy', :title => 'Destroy'
          %dd.name
            = user.username
        %dl
          %dt E-mail
          %dd= user.email
        - if user.roles.any?
          %dl
            %dt Roles
            %dd= user.roles.map {|role| role.capitalize}.join(', ')
        - if user.posts.any?
          %dl
            %dt Posts
            %dd= user.posts.count
        %dl
          %dt Age
          %dd= time_ago_in_words user.created_at
