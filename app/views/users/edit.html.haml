- title t('.title')

#single
  #login
    - form_for @user do |f|
      %p
        = f.label :password, t('.password')
        = f.password_field :password
      %p
        = f.label :password_confirmation, t('.password_confirmation')
        = f.password_field :password_confirmation
      %p
        = submit_tag t('.submit')
